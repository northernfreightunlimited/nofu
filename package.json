    "@vitest/ui": "^1.6.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.9.0",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0",
    "prettier": "3.3.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.6.0",
    "undici": ">=5.28.5",
    "vite": "^5.4.12",
